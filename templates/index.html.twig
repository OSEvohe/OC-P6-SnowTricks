{% extends 'base.html.twig' %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block body %}

    <section class="container-fluid col-12 section-hero">
        <div class="row h-100">
            <h1 id="hero-teasing" class="m-auto">Le site communautaire de Snowboard</h1>
            <span class="scroll-down"><a href="{{ path("home") }}#tricks"><i class="fas fa-arrow-circle-down"></i></a></span>
        </div>
    </section>
    <div id="tricks"></div>
    <section class="container pt-5 mt-5">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center pb-5">Les Tricks</h2>
            </div>
        </div>

        <div class="row tricks-list">
            {% for trick in tricks %}
                <div class="col-sm-12 col-md-6 col-lg-3 trick-item mb-3 py-3 px-4">
                    <div class="trick-item-content">
                        <div class="trick-image-container">
                            <a href="{{ path("trick_detail", {'slug' : trick.slug}) }}" title="{{ trick.cover.alt }}" style="background-image:url('{{ asset("uploads/tricks/"~trick.cover.content) }}')">
                            </a>
                        </div>
                        <div class="trick-infos p-3">
                            <span><a href="{{ path("trick_detail", {'slug' : trick.slug}) }}">{{ trick.name }}</a></span>
                        </div>
                    </div>
                    {% if is_granted('ROLE_USER') %}
                    <div class="trick-action-button">
                        <a class="btn btn-primary" role="button" href="{{ path("trick_edit", {'slug' : trick.slug}) }}"><i class="fas fa-pen"></i></a>
                        <a class="btn btn-primary" role="button" data-toggle="modal" data-target="#deleteModal" data-id='{"value":"{{ trick.id }}", "type":"value", "selector":".modal-form-id"}'
                           data-title='{"value":"Supprimer Trick : {{ trick.name }}?", "selector":".modal-title"}'><i class="fas fa-trash"></i></a>
                    </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </section>

    {% include 'modals/delete.html.twig' %}
{% endblock %}