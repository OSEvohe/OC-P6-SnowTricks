<!-- Edit Media Modal -->
<div class="modal editMedia" tabindex="-1" role="dialog" id="editMedia__{{ media.vars.data.id }}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                {% if media.vars.data.type == 1 %}
                    <img class="mb-2" src="{{ asset("uploads/tricks/" ~ media.vars.data.content) }}" width="300px" alt="{{ media.vars.data.alt }}"/>
                {% endif %}
                {% if media.vars.data.type == 2 %}
                    <img class="mb-2" src="https://img.youtube.com/vi/{{ youtube.getId(media.vars.data.content) }}/mqdefault.jpg" alt="{{ media.vars.data.alt }}"/>
                    {{ form_row(media.children.content) }}
                    <button type="button" data-json="{{ path('media_video_info', {'id' : youtube.getId(media.vars.data.content)}) }}" class="btn btn-primary reloadVideoAlt" title="">Alt automatique</button>
                {% endif %}
                    {{ form_row(media.children.alt) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-close" data-dismiss="modal" data-id="{{ media.vars.data.id }}">Fermer</button>
            </div>
        </div>
    </div>
</div>