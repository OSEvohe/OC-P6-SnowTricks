<!-- Edit Media Modal -->
<div class="modal editMedia" tabindex="-1" role="dialog" id="editMedia__{{ media.vars.data.id }}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                {% if media.vars.data.type == 1 %}
                    <img src="{{ asset("uploads/tricks/" ~ media.vars.data.content) }}" width="300px" alt="{{ media.vars.data.alt }}"/>
                {% endif %}
                {% if media.vars.data.type == 2 %}
                    <img src="https://img.youtube.com/vi/{{ youtube.getId(media.vars.data.content) }}/mqdefault.jpg" alt="{{ media.vars.data.alt }}"/>
                    <div class="form-group mt-2">
                        {{ form_label(media.children.content) }}
                        {{ form_widget(media.children.content) }}
                    </div>
                {% endif %}
                <div class="form-group mt-2">
                    {{ form_label(media.children.alt) }}
                    {{ form_widget(media.children.alt) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-close" data-dismiss="modal" data-id="{{ media.vars.data.id }}">Fermer</button>
            </div>
        </div>
    </div>
</div>