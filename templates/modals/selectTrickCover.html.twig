<!-- Delete Media Modal -->
<div class="modal" tabindex="-1" role="dialog" id="selectTrickCoverModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Selectionner une image principale</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{ form_start(formCover) }}
            <div class="modal-body">
                {% for cover in formCover.cover %}
                    <div>
                        {{ form_row(cover) }}
                    </div>
                {% endfor %}
            </div>
            <div class="modal-footer">
                <button type=submit" class="btn btn-primary">Selectionner</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
            {{ form_end(formCover) }}
        </div>
    </div>
</div>